<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fit.bloodmanagment">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/blood_drop"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name="com.fit.bloodmanagment.Slider.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fit.bloodmanagment.Slider.MainActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.fit.bloodmanagment.Map.MapsActivity"
            android:label="@string/title_activity_maps"
            android:screenOrientation="portrait" />
        <activity android:name="com.fit.bloodmanagment.Activity.AboutUsActivity" />
        <activity android:name="com.fit.bloodmanagment.Activity.DonarActivity" />
        <activity android:name="com.fit.bloodmanagment.Activity.ReceiverActivity" />
        <activity android:name="com.fit.bloodmanagment.Activity.BloodBanks" />
        <activity android:name="com.fit.bloodmanagment.Activity.PrecautionsActivity" />
        <activity android:name="com.fit.bloodmanagment.Activity.ContactUsActivity" />
        <activity android:name="com.fit.bloodmanagment.Activity.FeedBackActivity"></activity>
    </application>

</manifest>