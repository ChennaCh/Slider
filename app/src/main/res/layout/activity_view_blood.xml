<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E57373"
    android:orientation="vertical"
    tools:context="com.fratelloinnotech.blooddonors.Activity.ViewBloodActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/viewcamp_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways"
        app:theme="@style/ToolbarStyle"
        android:background="@color/colorPrimaryDark"/>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        android:layout_gravity="center"
        ads:adUnitId="ca-app-pub-4682541119478126/9094826082">
    </com.google.android.gms.ads.AdView>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlrecycle"
        android:layout_below="@+id/viewcamp_toolbar"
        android:layout_height="match_parent">
   <com.fratelloinnotech.blooddonors.Beans.ObservableRecyclerView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/viewcamps">
   </com.fratelloinnotech.blooddonors.Beans.ObservableRecyclerView>
        <TextView
            android:visibility="gone"
            android:id="@+id/displayerror"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""/>
        <!--<com.google.android.gms.ads.AdView-->
            <!--xmlns:ads="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/adView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--ads:adSize="BANNER"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_centerInParent="true"-->
            <!--ads:adUnitId="ca-app-pub-4682541119478126/9094826082">-->
        <!--</com.google.android.gms.ads.AdView>-->
    </RelativeLayout>
</LinearLayout>
